<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ApresentacaoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageView"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:src="@drawable/apresentacao1"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        </androidx.appcompat.widget.AppCompatImageView>

        <TextView
            android:id="@+id/texTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"

            android:layout_marginEnd="15dp"
            android:fontFamily="@font/title_apresentacao"
            android:gravity="center"
            android:text="@string/text_bem_vindo"
            android:textColor="@color/background"
            android:textSize="29sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView">

        </TextView>

        <TextView
            android:id="@+id/textTitle2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/text_apresentacao_one"
            android:textColor="#015567"
            android:textSize="21sp"
            android:textStyle="bold"
            android:fontFamily="@font/font_sub_title"
            app:layout_constraintEnd_toEndOf="@+id/texTitle"
            app:layout_constraintStart_toStartOf="@+id/texTitle"
            app:layout_constraintTop_toBottomOf="@id/texTitle">

        </TextView>

        <GridLayout
            android:id="@+id/crid1"
            android:layout_width="45dp"
            android:layout_height="7dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="@color/background"
            app:layout_constraintEnd_toStartOf="@+id/crid2"
            app:layout_constraintTop_toBottomOf="@+id/textTitle2">

        </GridLayout>

        <GridLayout
            android:id="@+id/crid2"
            android:layout_width="45dp"
            android:layout_height="7dp"
            android:layout_marginTop="5dp"
            android:background="#C1BCBC"
            app:layout_constraintEnd_toEndOf="@+id/textTitle2"
            app:layout_constraintStart_toStartOf="@+id/textTitle2"
            app:layout_constraintTop_toBottomOf="@+id/textTitle2">

        </GridLayout>

        <GridLayout
            android:id="@+id/crid3"
            android:layout_width="45dp"
            android:layout_height="7dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="#C1BCBC"
            app:layout_constraintStart_toEndOf="@+id/crid2"
            app:layout_constraintTop_toBottomOf="@+id/textTitle2">

        </GridLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_perso_red"
            android:text="AvanÃ§ar"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/crid3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPular"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_perso_red"
            android:text="Pular"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/crid1" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>